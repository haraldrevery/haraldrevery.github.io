---
layout: base.njk
---
<div class="page-container pt-24 pb-12 extra_fade_effect">
    <article class="mx-auto">
        
        <div class="mb-8">
            <a href="/notebook.html" class="inline-flex items-center text-neutral-600 dark:text-neutral-400 hover:text-neutral-900 dark:hover:text-white transition-colors font-mono text-sm uppercase tracking-wider">
               ← Back to Notebook
            </a>
        </div>
        
        <div class="mb-8 pb-8 border-b border-neutral-200 dark:border-neutral-800">
            <time class="text-sm font-mono text-neutral-500 dark:text-neutral-400 uppercase tracking-wider" datetime="{{ date }}">
                {{ date | readableDate }}
            </time>
            <h1 class="text-5xl md:text-6xl text-zinc-900 dark:text-white mt-4 mb-4 uppercase tracking-wider">
                {{ title }}
            </h1>
        </div>
        
        <div class="prose prose-lg max-w-none text-zinc-900 dark:text-white">
            {{ content | safe }}
        </div>
        
    </article>
    
</div>

<div class="page-container pt-24">
  <hr>
  <div class="py-2">
    <time class="text-sm font-mono text-neutral-500 dark:text-neutral-400 uppercase tracking-wider" datetime="{{ date }}">
        {{ date | readableDate }}
    </time>
  </div>
</div>
 
</div>

  <div class="page-container pt-6">

        <a href="/notebook.html" class="inline-block border-b-2 border-black dark:border-white pb-1 hover:opacity-50 transition text-lg tracking-widest">
